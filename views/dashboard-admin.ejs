                        <div class="mb-4">
                            <label class="block text-xs font-bold text-gray-700 uppercase mb-1">
                                Año
                            </label>
                            <input type="number" id="input-anio-pago"
                                class="w-full border p-2 rounded focus:ring-secondary text-sm">
                        </div>

                        <div class="flex justify-end gap-2">
                            <button type="button"
                                onclick="document.getElementById('modal-aprobar-pago').classList.add('hidden')"
                                class="px-4 py-2 bg-gray-200 text-gray-700 rounded text-sm hover:bg-gray-300">
                                Cancelar
                            </button>
                            <button type="submit"
                                class="px-4 py-2 bg-green-600 text-white rounded text-sm hover:bg-green-700 font-bold">
                                Aprobar Pago
                            </button>
                        </div>
                    </form>
                </div>
            </div>

