<div id="modal-actividad-detalle" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog"
    aria-modal="true">

    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm transition-opacity" onclick="cerrarModalActividad()"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">

            <div
                class="relative transform overflow-hidden rounded-2xl bg-white dark:bg-gray-800 text-left shadow-2xl transition-all 
                        w-full max-w-lg md:max-w-3xl flex flex-col md:flex-row max-h-[90vh] md:max-h-none overflow-y-auto md:overflow-visible">

                <button onclick="cerrarModalActividad()"
                    class="absolute top-3 right-3 z-20 bg-black/40 hover:bg-red-500 text-white w-8 h-8 rounded-full flex items-center justify-center transition-colors backdrop-blur-md">
                    <i class="fa-solid fa-times"></i>
                </button>

                <div class="w-full md:w-5/12 h-56 md:h-auto md:min-h-full bg-gray-200 relative shrink-0">
                    <img id="modal-act-img" src="" class="absolute inset-0 w-full h-full object-cover">
                </div>

                <div class="w-full md:w-7/12 p-5 md:p-8 flex flex-col">

                    <span id="modal-act-tipo"
                        class="w-fit px-3 py-1 rounded-full text-[10px] md:text-xs font-bold bg-accent text-primary uppercase mb-3 tracking-wider">
                        Evento
                    </span>

                    <h2 id="modal-act-titulo"
                        class="text-2xl md:text-3xl font-extrabold text-primary dark:text-white mb-3 leading-tight">
                        Título
                    </h2>

                    <div
                        class="flex flex-wrap gap-3 md:gap-4 text-sm text-gray-500 dark:text-gray-300 mb-4 font-medium">
                        <span class="flex items-center"><i class="fa-regular fa-calendar mr-2 text-highlight"></i> <span
                                id="modal-act-fecha"></span></span>
                        <span class="flex items-center"><i class="fa-regular fa-clock mr-2 text-highlight"></i> <span
                                id="modal-act-hora"></span></span>
                    </div>

                    <div class="flex-grow overflow-y-auto custom-scrollbar max-h-40 md:max-h-60 mb-6">
                        <p id="modal-act-desc"
                            class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed whitespace-pre-line">
                            Descripción detallada...
                        </p>
                    </div>

                    <div
                        class="flex flex-col sm:flex-row items-center justify-between mt-auto pt-4 border-t border-gray-100 dark:border-gray-700 gap-4 sm:gap-0">
                        <div class="text-center sm:text-left">
                            <span class="block text-xs text-gray-400 uppercase font-bold tracking-wider">Costo</span>
                            <span id="modal-act-precio"
                                class="text-3xl font-extrabold text-secondary dark:text-accent">$0</span>
                        </div>

                        <button id="btn-inscribirme-inicio"
                            class="w-full sm:w-auto bg-gradient-to-r from-primary to-secondary hover:to-primary text-white px-8 py-3 rounded-xl font-bold shadow-lg transform hover:-translate-y-1 transition-all flex items-center justify-center gap-2">
                            <span>Inscribirme</span>
                            <i class="fa-solid fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-inscripcion-whatsapp" class="fixed inset-0 z-[60] hidden" aria-labelledby="modal-wa-title" role="dialog"
    aria-modal="true">

    <div class="fixed inset-0 bg-black/80 backdrop-blur-md transition-opacity"
        onclick="document.getElementById('modal-inscripcion-whatsapp').classList.add('hidden')"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4">

            <div
                class="bg-white dark:bg-gray-900 p-6 md:p-8 rounded-3xl shadow-2xl w-full max-w-md relative transform transition-all">

                <button onclick="document.getElementById('modal-inscripcion-whatsapp').classList.add('hidden')"
                    class="absolute top-4 right-4 text-gray-400 hover:text-red-500 p-2 transition-colors">
                    <i class="fa-solid fa-times text-xl"></i>
                </button>

                <div class="text-center mb-6">
                    <div
                        class="w-16 h-16 bg-green-100 text-[#25D366] rounded-full flex items-center justify-center mx-auto mb-4 text-3xl shadow-sm">
                        <i class="fa-brands fa-whatsapp"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-white">Completa tus datos</h3>
                    <p class="text-sm text-gray-500 mt-1">Te redirigiremos a WhatsApp para finalizar.</p>
                </div>

                <form id="form-whatsapp-inscripcion" class="space-y-4">
                    <input type="hidden" id="wa-actividad-titulo">

                    <div>
                        <label class="text-xs font-bold text-gray-500 uppercase ml-1 mb-1 block">Nombre Completo</label>
                        <input type="text" id="wa-nombre" required
                            class="w-full border border-gray-300 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                    </div>

                    <div>
                        <label class="text-xs font-bold text-gray-500 uppercase ml-1 mb-1 block">Cédula</label>
                        <input type="text" id="wa-cedula" required
                            class="w-full border border-gray-300 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="text-xs font-bold text-gray-500 uppercase ml-1 mb-1 block">Teléfono</label>
                            <input type="tel" id="wa-telefono" required
                                class="w-full border border-gray-300 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                        </div>
                        <div>
                            <label class="text-xs font-bold text-gray-500 uppercase ml-1 mb-1 block">Correo</label>
                            <input type="email" id="wa-correo" required
                                class="w-full border border-gray-300 dark:border-gray-700 rounded-xl p-3 bg-gray-50 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                        </div>
                    </div>

                    <button type="submit"
                        class="w-full bg-[#25D366] hover:bg-green-600 text-white font-bold py-3.5 rounded-xl shadow-lg transition-all flex items-center justify-center gap-2 mt-4 transform active:scale-95">
                        <span>Enviar a WhatsApp</span>
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/modales-actividades.js"></script>