<div id="modal-actividad-detalle" class="fixed inset-0 bg-black/70 z-50 hidden flex items-center justify-center p-4 backdrop-blur-sm transition-opacity">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-2xl overflow-hidden flex flex-col md:flex-row relative animate-fade-in">
        <button onclick="cerrarModalActividad()" class="absolute top-4 right-4 z-10 bg-black/50 text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-red-500 transition">
            <i class="fa-solid fa-times"></i>
        </button>

        <div class="w-full md:w-5/12 h-48 md:h-auto bg-gray-200">
            <img id="modal-act-img" src="" class="w-full h-full object-cover">
        </div>

        <div class="w-full md:w-7/12 p-8 flex flex-col">
            <span id="modal-act-tipo" class="w-fit px-3 py-1 rounded-full text-xs font-bold bg-accent text-primary uppercase mb-3">Evento</span>
            
            <h2 id="modal-act-titulo" class="text-3xl font-extrabold text-primary dark:text-white mb-2 leading-tight">Título</h2>
            
            <div class="flex gap-4 text-sm text-gray-500 dark:text-gray-300 mb-4">
                <span><i class="fa-regular fa-calendar mr-1"></i> <span id="modal-act-fecha"></span></span>
                <span><i class="fa-regular fa-clock mr-1"></i> <span id="modal-act-hora"></span></span>
            </div>

            <p id="modal-act-desc" class="text-gray-600 dark:text-gray-400 text-sm mb-6 flex-grow">
                Descripción detallada...
            </p>

            <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
                <div>
                    <span class="block text-xs text-gray-400 uppercase">Costo</span>
                    <span id="modal-act-precio" class="text-2xl font-bold text-secondary dark:text-accent">$0</span>
                </div>
                <button id="btn-inscribirme-inicio" 
                    class="bg-gradient-to-r from-primary to-secondary hover:to-primary text-white px-6 py-3 rounded-xl font-bold shadow-lg transform hover:-translate-y-1 transition-all">
                    ¡Inscribirme Ahora!
                </button>
            </div>
        </div>
    </div>
</div>

<div id="modal-inscripcion-whatsapp" class="fixed inset-0 bg-black/80 z-[60] hidden flex items-center justify-center p-4 backdrop-blur-md">
    <div class="bg-white dark:bg-gray-900 p-8 rounded-3xl shadow-2xl w-full max-w-md relative">
        <button onclick="document.getElementById('modal-inscripcion-whatsapp').classList.add('hidden')" class="absolute top-4 right-4 text-gray-400 hover:text-red-500">
            <i class="fa-solid fa-times text-xl"></i>
        </button>

        <div class="text-center mb-6">
            <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
                <i class="fa-brands fa-whatsapp"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 dark:text-white">Completa tus datos</h3>
            <p class="text-sm text-gray-500">Te redirigiremos a WhatsApp para finalizar.</p>
        </div>

        <form id="form-whatsapp-inscripcion" class="space-y-4">
            <input type="hidden" id="wa-actividad-titulo">
            
            <div>
                <label class="text-xs font-bold text-gray-500 uppercase ml-1">Nombre Completo</label>
                <input type="text" id="wa-nombre" required class="w-full border border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-green-500 outline-none">
            </div>
            <div>
                <label class="text-xs font-bold text-gray-500 uppercase ml-1">Cédula</label>
                <input type="text" id="wa-cedula" required class="w-full border border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-green-500 outline-none">
            </div>
            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="text-xs font-bold text-gray-500 uppercase ml-1">Teléfono</label>
                    <input type="tel" id="wa-telefono" required class="w-full border border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-green-500 outline-none">
                </div>
                <div>
                    <label class="text-xs font-bold text-gray-500 uppercase ml-1">Correo</label>
                    <input type="email" id="wa-correo" required class="w-full border border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-green-500 outline-none">
                </div>
            </div>

            <button type="submit" class="w-full bg-[#25D366] hover:bg-green-600 text-white font-bold py-4 rounded-xl shadow-lg transition-all flex items-center justify-center gap-2 mt-2">
                <span>Enviar a WhatsApp</span>
                <i class="fa-regular fa-paper-plane"></i>
            </button>
        </form>
    </div>
</div>
<script src="/js/modales-actividades.js"></script>